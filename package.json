{
  "scripts": {
    "mklib": "mkdir -p src/main/resources/static/lib",
    "htmx": "cp node_modules/htmx.org/dist/htmx.min.js src/main/resources/static/lib/htmx.min.js",
    "css": "tailwindcss -i src/main/resources/static/css/input.css -o src/main/resources/static/css/felf.css",
    "csswatch": "npm run css -- --watch",
    "build": "npm run mklib && npm run htmx && npm run css"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "daisyui": "^3.9.4",
    "htmx.org": "^1.9.9",
    "tailwindcss": "^3.3.3"
  }
}
